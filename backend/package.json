        "jsonwebtoken": "^9.0.0",
        "luxon": "^3.0.1",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "multer": "^1.4.5-lts.1",
        "mysql": "^2.18.1",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.8.1",
        "typedi": "^0.10.0",
        "typeorm": "^0.3.7",
        "winston": "^3.8.1",
        "winston-daily-rotate-file": "^4.7.1"
    }
