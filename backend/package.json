    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node ./src/server.ts",
        "start": "cross-env NODE_ENV=production node ./build/server.js",
        "seed": "cross-env NODE_ENV=development ts-node ./scripts/seeder.ts",
        "clean": "rimraf ./build",
        "typeorm": "typeorm-ts-node-commonjs",
        "jwt:generate": "ts-node ./scripts/jwt-generate.ts",
        "compile": "yarn clean && tsc",
        "compile:debug": "yarn compile --diagnostics",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix",
        "migration:generate": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts GENERATE",
        "migration:create": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts CREATE",
        "migration:run": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts RUN",
        "migration:revert": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts REVERT",
        "migration:show": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts SHOW"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.15",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/luxon": "^3.0.0",
        "@types/morgan": "^1.9.3",
        "@types/ms": "^0.7.31",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.18",
        "@types/pg": "^8.6.5",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.22.0",
        "eslint-import-resolver-typescript": "^3.4.2",
        "eslint-plugin-import": "^2.26.0",
        "rimraf": "^4.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.20.1",
        "class-transformer": "^0.5.1",
